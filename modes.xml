<?xml version="1.0" encoding="UTF-8"?>
<modes>

  <!-- bhw → eng -->

  <mode name="bhw-eng" install="yes" gendebug="yes">
    <pipeline>

      <program name="lt-proc -w">
        <file name="bhw-eng.automorf.bin"/>
      </program>


      <program name="cg-proc -w">
        <file name="bhw-eng.rlx.bin"/>
      </program>
      <program name="apertium-tagger -g $2">
        <file name="bhw-eng.prob"/>
      </program>
      <program name="apertium-pretransfer"/>
      <program name="lt-proc -b">
        <file name="bhw-eng.autobil.bin"/>
      </program>
      <program name="lrx-proc -m">
        <file name="bhw-eng.autolex.bin"/>
      </program>

      <program name="apertium-transfer -b">
        <file name="apertium-bhw-eng.bhw-eng.t1x"/>
        <file name="bhw-eng.t1x.bin"/>
      </program>
      <program name="apertium-interchunk">
        <file name="apertium-bhw-eng.bhw-eng.t2x"/>
        <file name="bhw-eng.t2x.bin"/>
      </program>
      <program name="apertium-postchunk">
        <file name="apertium-bhw-eng.bhw-eng.t3x"/>
        <file name="bhw-eng.t3x.bin"/>
      </program>

      <program name="lt-proc $1">
        <file name="bhw-eng.autogen.bin"/>
      </program>
      <program name="lt-proc -p">
        <file name="bhw-eng.autopgen.bin"/>
      </program>
    </pipeline>
  </mode>

  <!-- eng → bhw -->

  <mode name="eng-bhw" install="yes" gendebug="yes">
    <pipeline>

      <program name="lt-proc -w">
        <file name="eng-bhw.automorf.bin"/>
      </program>


      <program name="cg-proc -w">
        <file name="eng-bhw.rlx.bin"/>
      </program>
      <program name="apertium-tagger -g $2">
        <file name="eng-bhw.prob"/>
      </program>

      <program name="apertium-pretransfer"/>
      <program name="lt-proc -b">
        <file name="eng-bhw.autobil.bin"/>
      </program>
      <program name="lrx-proc -m">
        <file name="eng-bhw.autolex.bin"/>
      </program>

      <program name="apertium-transfer -b">
        <file name="apertium-bhw-eng.eng-bhw.t1x"/>
        <file name="eng-bhw.t1x.bin"/>
      </program>
      <program name="apertium-interchunk">
        <file name="apertium-bhw-eng.eng-bhw.t2x"/>
        <file name="eng-bhw.t2x.bin"/>
      </program>
      <program name="apertium-postchunk">
        <file name="apertium-bhw-eng.eng-bhw.t3x"/>
        <file name="eng-bhw.t3x.bin"/>
      </program>

      <program name="lt-proc $1">
        <file name="eng-bhw.autogen.bin"/>
      </program>
      <program name="lt-proc -p">
        <file name="eng-bhw.autopgen.bin"/>
      </program>
    </pipeline>
  </mode>
</modes>

